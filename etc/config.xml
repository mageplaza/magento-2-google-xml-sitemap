<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <seo>
            <html_sitemap>
                <enable>1</enable>
                <category>0</category>
                <display_type>list</display_type>
                <product_sorting>product_ids</product_sorting>
                <product_sorting_dir>asc</product_sorting_dir>
                <out_of_stock_products>1</out_of_stock_products>
            </html_sitemap>
            <xml_sitemap>
                <homepage_optimization>1</homepage_optimization>
                <frequency>daily</frequency>
                <error_enabled>1</error_enabled>
                <sender>general</sender>
                <email_template>seo_xml_sitemap_email_template</email_template>
            </xml_sitemap>
        </seo>
    </default>
</config>
